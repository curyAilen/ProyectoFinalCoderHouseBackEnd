<!DOCTYPE html>
<html>
<head>
    <%- include ('partials/head') %>
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body class="container-fluid">
    <%- include ('partials/header') %>
    <h1>INICIO</h1>
    <div class="row">
        {{#each productsFind}}
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="/img/{{ thumbnail }}" alt="Imagen del producto" class="card-img-top">
                    <div class="card-body">
                        <h4 class="card-title">Title: {{ title }}</h4>
                        <p class="card-text">Disponibilidad: {{ stock }}</p>
                        <p class="card-text">Price: ${{ price }}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <%- include ('partials/footer') %>
</body>
</html>
