
    <title>{{ title }}</title>
</head>
<body class="container-fluid">
    {{>header}}
    <h1 class="mt-3">Chat</h1>

    <div id="chat-container" class="mt-3">
        <ul id="chat-messages" class="list-group">
            {{#each messages}}
            <li class="list-group-item">
                <strong>{{this.user}}</strong>: {{this.message}}
            </li>
            {{/each}}
        </ul>
    </div>

    <div class="d-flex justify-content-center align-items-center mt-3" style="height: 100vh;">
        <form id="chat-form" action="/enviar-mensaje" method="post" class="p-3 rounded shadow" style="width: 50%;">
            <div class="form-group">
                <input type="text" id="user" name="user" class="form-control" placeholder="Tu correo">
            </div>
            <div class="form-group">
                <input type="text" id="message" name="message" class="form-control" placeholder="Escribe tu mensaje">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</body>
</html>
