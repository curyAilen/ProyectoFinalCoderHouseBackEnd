<body class="">
    {{>header}}
<div class="container">
  <h2>Agregar Nuevo Producto</h2>
  <form id="productForm" action="/create" method="post" enctype="multipart/form-data" > 
  <div class="row">
    <div class="form-group col-lg-6">
      <label for="title">Título:</label>
      <input type="text" class="form-control" id="title" placeholder="Ingrese el título" required>
    </div>
  
    <div class="form-group col-lg-6">
      <label for="price">Precio:</label>
      <input type="number" class="form-control" id="price" placeholder="Ingrese el precio" required>
    </div>
    <div class="form-group col-lg-4">
      <label for="thumbnail">URL de la Imagen:</label>
      <input type="file" class="form-control" id="thumbnail" placeholder="Ingrese la URL de la imagen" required>
    </div>
    <div class="form-group col-lg-4">
      <label for="code">Código:</label>
      <input type="text" class="form-control" id="code" placeholder="Ingrese el código" required>
    </div>
    <div class="form-group col-lg-4">
      <label for="stock">Stock:</label>
      <input type="number" class="form-control" id="stock" placeholder="Ingrese el stock" required>
    </div>
      <div class="form-group col-lg-6">
      <label for="description">Descripción:</label>
      <textarea class="form-control" id="description" placeholder="Ingrese la descripción" required></textarea>
    </div>
    </div>
    <button type="submit" class="btn btn-primary col-lg-3">Agregar Producto</button>
  </form>
</div>