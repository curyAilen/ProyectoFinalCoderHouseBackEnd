<title>{{ title }}</title>
</head>
<body class="">
    {{>header}}
<div class="container">
  <h2>Agregar Nuevo Producto</h2>
  <form id="productForm" action="/api/products/create" method="post" enctype="multipart/form-data">
    <div class="row">
      <div class="form-group col-lg-6">
        <label for="title">Título:</label>
        <input type="text" class="form-control" name="title" placeholder="Ingrese el título" required>
      </div>

      <div class="form-group col-lg-6">
        <label for="price">Precio:</label>
        <input type="number" class="form-control" name="price" placeholder="Ingrese el precio" required>
      </div>

      <div class="form-group col-lg-4">
        <label for="thumbnail">Imagen:</label>
        <input type="file" class="form-control" name="thumbnail" required>
      </div>

      <div class="form-group col-lg-4">
        <label for="code">Código:</label>
        <input type="text" class="form-control" name="code" placeholder="Ingrese el código" required>
      </div>

      <div class="form-group col-lg-4">
        <label for="stock">Stock:</label>
        <input type="number" class="form-control" name="stock" placeholder="Ingrese el stock" required>
      </div>

      <div class="form-group col-lg-6">
        <label for="description">Descripción:</label>
        <textarea class="form-control" name="description" placeholder="Ingrese la descripción" required></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-primary col-lg-3">Agregar Producto</button>
  </form>
</div>
